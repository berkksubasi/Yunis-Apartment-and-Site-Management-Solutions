{
  "expo": {
    "name": "aparthus-site-yonetim",
    "slug": "aparthus-site-yonetim",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.observerdev.aparthussiteyonetim",
      "infoPlist": {
        "NSCameraUsageDescription": "Kamera, QR kod taraması ve fotoğraf çekmek için kullanılacaktır.",
        "NSLocationWhenInUseUsageDescription": "Konum bilgisi, size en yakın hizmetleri göstermek için kullanılacaktır.",
        "NSMicrophoneUsageDescription": "Mikrofon, sesli mesaj kaydetmek için kullanılacaktır."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.observerdev.aparthussiteyonetim",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "8f858511-3861-4fc7-a5dd-2e946c3bf33f"
      }
    }
  }
}
